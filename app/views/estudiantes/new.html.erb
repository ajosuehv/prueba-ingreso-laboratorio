<h2 class="text-muted">Formulario de Ingreso</h2>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

    <%= form_with scope: :estudiante, url: estudiantes_path, local: true do |form| %>
        <div class="form-group">
          <p>
            <label for="nombre">Nombre: </label>
            <input type="nombre" name="estudiante[nombre]" class="form-control"
                   id="nombre" placeholder="Tu nombre completo aquí" required>
          </p>
        </div>

        <div class="form-group">
          <p>
            <label for="ncuenta">Número de cuenta: </label>
            <input type="ncuenta" name="estudiante[ncuenta]" class="form-control" id="ncuenta"
                   placeholder="Tu número de cuenta" required>
          </p>
        </div>

        <div class="form-group">

          <p>
            <label for="correo_electronico">Correo electrónico: </label>
            <input type="correo_electronico" name="estudiante[correo_electronico]" class="form-control"
                   id="correo_electronico" placeholder="Correo electrónico" required>

          </p>
        </div>

        <div class="form-group">

          <p>
            <input class="btn btn-lg btn-success" type="submit" name="commit" value="Obtener Datos" data-disable-with="obtener datos">
          </p>
        </div>
    <% end %>
    </div>
  </div>
</div>


